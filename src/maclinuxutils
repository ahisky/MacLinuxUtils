VERSIONTAG=2.3.5
VER="MacLinuxUtils $VERSIONTAG"

if [[ "$1" = "-e" ]]; then 
	pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY /usr/bin/java -jar /opt/mluexp.jar
else
	pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY /usr/bin/java -jar /opt/mlu.jar
fi
